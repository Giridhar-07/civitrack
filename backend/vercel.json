{
  "version": 2,
  "builds": [
    { "src": "api/index.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.ts" },
    { "src": "/(.*)", "dest": "/api/index.ts" }
  ],
  "installCommand": "npm ci --include=dev",
  "buildCommand": "npm run build",
  "env": {
    "NPM_CONFIG_PRODUCTION": "false"
  }
}