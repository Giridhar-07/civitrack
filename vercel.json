{
  "version": 2,
  "builds": [
    { "src": "backend/api/index.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/api/index.ts" },
    { "src": "/(.*)", "dest": "/backend/api/index.ts" }
  ],
  "installCommand": "cd backend && npm ci --include=dev",
  "buildCommand": "cd backend && npm run build",
  "env": {
    "NPM_CONFIG_PRODUCTION": "false",
    "FRONTEND_URL": "https://civictrac.netlify.app",
    "EMAIL_FROM": "CiviTrack <noreply@civitrack.com>"
  }
}
